{% extends '@AcmeMy/Default/layout.html.twig'%}
{% block title %}Home Page{% endblock %}
{% block content %}
    <div class="block">
        <h2>{{ test|capitalize }}</h2>
        <address>
                <b><span>It's my work!</span></b><br>
                <b>
                   <span>email:</span>
                    <a href="mailto:Alexey.panteleychuk@gmail.com">{{ email|reverse|title }}</a>
                </b>
        </address>
        {% autoescape 'html' %}
            {% set num = '<strong>1</strong>' %}
            {{ number|raw }} - using filter |raw <br/>
